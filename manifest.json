{
	"name": "voidTube",
	"description": "Extension",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": ["scripting", "storage"],
	"host_permissions": ["*://www.youtube.com/*"],
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"exclude_matches": ["*://www.youtube.com/feed/you*"],
			"js": ["content-script.js", "dashboard.js"],
			"css": ["homeBlocker.css"],
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	}
}
